{
	"name": "Player Stats", 
	"version": "0.1", 
	"description": "A simply, fast way to view stats without navigating to a different page.",
	"permissions":[
		"storage",
		"http://localhost/*"
	],
	"options_ui": {
		"page": "/options/options.html",
		"open_in_tab": false
	},
	"background": {
		"scripts":[
			"background.js",
			"/main/formattedStatsObject.js",
			"/main/main.js",
			"/main/update.js", 
			"/main/options.js" 
		],
		"persistent":false
	},
	"content_scripts": [
		{
			"css": ["/tooltip/tippy.css"], 
			"js": [ "/main/Jquery-3.3.1.js", "/tooltip/tippy.js", "/main/content.js"], //need to change all libararies to minified ones for deployment. Need to decide best order. 
			"matches": [ "<all_urls>" ]
		}
	],
	"manifest_version": 2
}
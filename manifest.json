{
	"name": "Quick Stats", 
	"version": "0.1.0", 
	"authur": "Alex Richards",
	"short_name": "Quick Stats",
	"description": "A simple, fast way to view stats without navigating to a different page.",
	"permissions":[
		"storage",
		"https://quickstatsback.herokuapp.com/"
	],
	"browser_action": {
		"default_popup": "/options/options.html"
	},
	"background": {
		"scripts":[
			"/main/update.js",
			"/main/main.js",
			"/options/options.js"
		],
		"persistent":false
	},
	"content_scripts": [
		{
			"css": ["/tooltip/tippy.css"], 
			"js": [ "/main/Jquery-3.3.1.js", "/tooltip/tippy.js", "/main/content.js"],
			"matches": [ "<all_urls>" ]
		}
	],
	"icons": {
		"16": "/assets/icon16.png", 
		"48": "/assets/icon48.png"
	},
	"manifest_version": 2
}
{
	"name": "Player Stats", 
	"version": "0.1", 
	"description": "A simply, fast way to view stats without navigating to a different page.",
	"permissions":["storage"],
	"background": {
		"scripts":[
			"background.js",
			"/main/finalStatObject.js",
			"/main/main.js" 
		],
		"persistent":false
	},
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ], 
			"js": [ "/main/content.js" ]
		}
	],
	"manifest_version": 2
}